//generate public key,private key and the hex address

package main

import (
	"crypto/ecdsa"
	"crypto/elliptic"
	"crypto/rand"
	"crypto/sha256"
	"encoding/hex"
	"fmt"
)

func main() {
	priv, _ := ecdsa.GenerateKey(elliptic.P256(), rand.Reader)
	pub := priv.PublicKey
	pub_hash := sha256.Sum256(elliptic.Marshal(elliptic.P256(), pub.X, pub.Y))
	fmt.Println("private key is:", priv.D.String()) //displays privatekey
	fmt.Println("public key is:", pub)              //displays public key

	hash2 := []byte{}
	hash2 = append(hash2, pub_hash[:]...)
	address := hex.EncodeToString(hash2)
	fmt.Println("hex address is", address) //displays hex address

}
